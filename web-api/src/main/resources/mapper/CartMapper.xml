<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kimi.my.shop.web.api.dao.CartDao">
    <sql id="cartColumns">
        a.id,
        a.user_id,
        a.product_id,
        a.number,
        a.flag,
        b.name,
        b.img1,
        b.price
    </sql>

    <resultMap id="cartList" type="com.kimi.my.shop.domain.Cart">
        <id property="id" column="id"/>
        <result column="user_id" property="userId"/>
        <result column="product_id" property="productId"/>
        <result column="number" property="number"/>
        <result column="flag" property="flag"/>
        <association property="product" javaType="com.kimi.my.shop.domain.Product">
            <id column="id" property="id"/>
            <result column="name" property="name"/>
            <result column="img1" property="img1"/>
            <result column="price" property="price"/>
        </association>
    </resultMap>
    
    <select id="showCartList" resultMap="cartList">
        select
        <include refid="cartColumns"></include>
        from
            tb_cart as a
            left join
            tb_product as b
            on
            a.product_id = b.id
        where
            a.user_id = #{userId}
    </select>

    <select id="showCartListByStatus" resultMap="cartList">
        select
        <include refid="cartColumns"></include>
        from
            tb_cart as a
            left join
            tb_product as b
            on
            a.product_id = b.id
        where
            a.user_id = #{userId}
        and
            flag = #{flag}
    </select>


    <select id="selectCartById" resultType="Cart">
        select
            id, user_id, product_id, `number`, flag
        from tb_cart
        where id = #{id}
    </select>

    <select id="isExistCart" resultType="Cart">
        select *
        from tb_cart
        where
            user_id = #{userId}
        and
            product_id = #{productId}
    </select>

    <insert id="addCart" parameterType="Cart">
        insert into tb_cart
        (
            `user_id`,
            `product_id`,
            `number`,
            `flag`
        )
        values
        (
            #{userId},
            #{productId},
            #{number},
            #{flag}
        )
    </insert>

    <delete id="deleteCart">
        delete from tb_cart
        where id = #{id}
    </delete>

    <delete id="deleteCartBySelect">
        delete from tb_cart
        where
            user_id = #{userId}
        and
            flag = #{flag}
    </delete>

    <update id="addNum">
        update tb_cart
        set `number` = `number` + 1
        where id = #{id}
    </update>

    <update id="subNum">
        update tb_cart
        set `number` = `number` - 1
        where id = #{id}
    </update>

    <update id="updateOneFlag">
        update tb_cart
        set flag = #{flag}
        where id = #{id}
    </update>
    <select id="updateAllFlag">
        update tb_cart
        set flag = #{flag}
        where user_id = #{userId}
    </select>
</mapper>